<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingStart="15dp"
    android:background="?attr/background"
    tools:context=".presentation.screen.dialog.ActionDialogFragment"
    tools:ignore="RtlSymmetry">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bGoogle"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:textColor="?attr/color"
        android:drawablePadding="15dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_google"
        android:background="@color/transparent"
        android:text="@string/go_to_source"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bYoutube"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:textColor="?attr/color"
        android:paddingStart="10dp"
        android:drawablePadding="15dp"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_youtube"
        android:background="@color/transparent"
        android:text="@string/see_in_youtube"
        tools:ignore="RtlSymmetry" />
</androidx.appcompat.widget.LinearLayoutCompat>